<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        
        <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <link href="/public/CSS/main.css" rel="stylesheet" type="text/css">
        
        <title>V10-ke</title>
    </head>
    
    <body>
        <%- include("partials/navbar.ejs") %>
        
        <div class="box">
            <form class="form-red" method="post" action="/posts/<%- post['id'] %>/edit">
                <div class="form-group">
                    <h1>Редактирование поста</h1>
                </div>
                <div class="form-group">
                    <label for="name">Заглавие</label>
                    <input type="text" name="title" value="<%- post['title'] %>" required>
                </div>
                <div class="form-group">
                    <label for="name">Содержимое</label>
                    <textarea name="body" class="form-control" rows="5" required><%- post['body'] %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit">Редактировать</button>
                </div>
                <div class="form-group">
                    <a href="/home">Вернуться назад</a>
                </div>
            </form>
        </div>
    </body>
</html>