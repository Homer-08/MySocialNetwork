<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1,
		shrink-to-fit=no">

		<!-- Bootstrap CSS -->
		<link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css">
        <link href="/public/CSS/main.css" rel="stylesheet" type="text/css">
        <title>V10-ke</title>
    </head>
    
    <body>
        <%- include("partials/navbar.ejs") %>
        <% if (error) { %>
                    <div class="alert alert-danger" role="banner">
                        <%- error %>
                    </div>
                <% } %>
        <div class="box">
            <form class="form-register" method="post" action="/register">
                <div class="form-group">
                    <h1>Регистрация</h1>
                </div>
                <div class="form-group">
                    <input type="text" name="name" placeholder="Имя" required>
                </div>
                <div class="form-group">
                    <input type="text" name="surname" placeholder="Фамилия" required>
                </div>
                <div class="form-group">
                    <input type="date" name="data_birth" placeholder="Дата рождения" required>
                </div>
                <div class="form-group">
                    <input type="text" name="country" placeholder="Страна, город" required>
                </div>
                <div class="form-group">
                    <input type="tel" pattern="[0-9]{12}" name="number" placeholder="Номер тел. (380999204939)">
                </div>
                <div class="form-group">
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="password" name="password" placeholder="Пароль" required>
                </div>
                <div class="form-group">
                    <button type="submit">Зарегестрироватся</button>
                </div>
                <div class="form-group">
                    <a href="/">Вход</a>
                </div>
            </form>
        </div>
        
        
    </body>
</html>